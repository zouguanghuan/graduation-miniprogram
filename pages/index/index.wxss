/**index.wxss**/
.index-container {
  width: 100%;
  height: 667rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.index-container .index-head-img {
  width: 100%;
}

.know-east {
  position: relative;
  width: 100%;
  margin: 20rpx auto;
  text-align: center;
}

.know-east text {
  font-size: 40rpx;
}

.know-east .play_icon {
  display: inline-block;
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  padding-top: 20rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  cursor: pointer;
  z-index: 3;
}

.index-container .index-text {
  position: fixed;
  bottom: 10rpx;
  height: 15%;
}
.index-container .index-text .content {
  padding: 8px 12px;
  background-color: #87eec4;
  border-radius: 30px;
  font-size: 32px;
}

.east-video {
  width: 100%;
  height: 550rpx;
  position: fixed;
  top: 26%;
  z-index: 5;
}
.east-video .close-btn {
  width: 80rpx;
  height: 80rpx;
  position: relative;
  transform: translate(900%, 68rpx);
  font-size: 40rpx;
  color: #fff;
  z-index: 6;
}
.east-video video {
  width: 100%;
  height: 100%;
}

